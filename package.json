{
  "name": "starter-3",
  "version": "1.0.0",
  "description": "Preview server with clean cache and cookies",
  "scripts": {
    "preview": "npm run kill-preview && npm run clean && npm run serve-and-open",
    "kill-preview": "fkill :8080 --force || exit 0",
    "serve-and-open": "concurrently \"npm run serve\" \"npm run open-browser\"",
    "open-browser": "npx open http://localhost:8080",
    "clean": "del \"styles/**/*.css\" \"styles/**/*.map\" && npm run clean-cookies",
    "clean-cookies": "node scripts/clean-cookies.js",
    "serve": "npx http-server -c-1 -p 8080"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "del-cli": "^5.1.0",
    "fkill-cli": "^6.2.0",
    "concurrently": "^8.2.2",
    "open": "^9.2.0"
  }
}
